<div class="container-fluid">
    <style>
        #locale-tree {
            height: 70vh;
        }

        #plot-picker {
            height: 15vh;
        }

        .list-group-item {
            padding: 0.5rem 0.75rem;
        }

        .list-group-item-county {
            padding: 0.25rem 0.5rem;
        }

        li > ul {
            margin-top: 0.5rem;
            margin-left: 1.0rem;
        }
    </style>

    <div class="row">
        <div class="col-md-12">
            <h1>COVID-19 Dashboard</h1>
            <hr>
        </div>
        <div id="left-col" class="col-md-3">
            <h3>Plots</h3>
            <PlotPicker class="overflow-auto" @id="plot-picker" />
            <h3>Locations</h3>
            <LocaleTree class="overflow-auto" @states={{@model}} @id="locale-tree" />
        </div>
        <div id="right-col" class="col-md-9">
            <div class="row">
                <div class="col-md-12">
                    <Options />
                    <hr>
                </div>
                <div class="col-md-12">
                    <ChartManager />
                </div>
            </div>
        </div>
    </div>
</div>
